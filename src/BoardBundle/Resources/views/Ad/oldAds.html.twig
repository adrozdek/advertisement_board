{% extends "::base.html.twig" %}

{% block title %}Stare ogłoszenia{% endblock %}

{% block body %}

    {% if app.user.id is defined %}

        <h1>Stare ogłoszenia: </h1>

        <div class="table-responsive">

            {# total items count #}
            <div class="count">
                <h4>Ilość ogłoszeń: {{ pagination.getTotalItemCount }}</h4>
            </div>
            <table class="table">
                <tr>
                    {# sorting of properties based on query components #}
                    <th class="col-md-2">{{ knp_pagination_sortable(pagination, 'Zdjęcie', 'a.id') }}</th>
                    <th class="col-md-2"{% if pagination.isSorted('a.title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Tytuł', 'a.title') }}</th>
                    <th class="col-md-8">{{ knp_pagination_sortable(pagination, 'Opis', ['a.date', 'a.time']) }}</th>
                </tr>

                {% for ad in pagination %}

                    {% include 'BoardBundle:Ad:showAdShort.html.twig' with {'ad': ad} %}
                {% endfor %}
            </table>
            {# display navigation #}
            <div class="navigation middle">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    {% endif %}
    


{% endblock %}
